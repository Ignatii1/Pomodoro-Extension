{
  "manifest_version": 2,
  "name": "Advanced Pomodoro Timer",
  "version": "1.2",
  "description": "An advanced Pomodoro Timer extension for Chrome with adjustable time and progress tracking",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}